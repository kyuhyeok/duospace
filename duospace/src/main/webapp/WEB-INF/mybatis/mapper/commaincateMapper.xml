	<select id="listcommainboard" parameterType="map" resultType="com.duospace.community.commaincate.Commaincate">
		SELECT ROW_NUMBER () OVER (PARTITION BY tb.cateNum ORDER BY tb.rank DESC) rank2, tb.* FROM (
		    SELECT * FROM (
		        SELECT c.catenum, c.created, boardNum, subject, hitCount, ROW_NUMBER () OVER (PARTITION BY c.cateNum ORDER BY c.created DESC) rank,boardName
		        FROM COMMAINBOARD b
		        RIGHT OUTER JOIN commaincate c ON b.cateNum=c.cateNum
<![CDATA[
		    ) where rank<=5
]]>
		) tb ORDER BY tb.boardName ASC , tb.rank ASC
	</select>
		
	
	
